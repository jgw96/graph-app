{
  "id": "/",
  "scope": "/",
  "name": "MailGO",
  "display": "standalone",
  "start_url": "/",
  "short_name": "MailGO",
  "theme_color": "#E1477E",
  "description": "This is a Mail GO app",
  "orientation": "any",
  "background_color": "#E1477E",
  "related_applications": [],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay"],
  "icons": [
    {
      "src": "assets/icons/512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "assets/icons/192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "assets/icons/48.png",
      "sizes": "48x48",
      "type": "image/png"
    },
    {
      "src": "assets/icons/96.png",
      "sizes": "96x96",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "assets/screenshots/screen.png",
      "sizes": "1617x1012",
      "type": "image/png"
    }
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ],
  "categories": [
    "utility"
  ],
  "shortcuts": [
    {
      "name": "New Email",
      "short_name": "New",
      "description": "Create a new email",
      "url": "/newEmail",
      "icons": [{ "src": "assets/icons/96.png", "sizes": "96x96" }]
    },
    {
      "name": "Contacts Book",
      "short_name": "Contacts",
      "description": "Manage my contacts",
      "url": "/contacts",
      "icons": [{ "src": "assets/icons/96.png", "sizes": "96x96" }]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/newEmail?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/newEmail",
      "accept": {
        "image/*": [".png", ".jpg"],
        "text/*": [".txt"]
      }
    }
  ],
  "share_target": {
    "action": "/attach/file/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "files": [
        {
          "name": "file",
          "accept": ["image/jpeg", ".png", ".jpg", ".txt"]
        }
      ]
    }
  },
  "widgets": [
    {
      "name": "MailGO",
      "description": "Widget for the MailGO mail app",
      "tag": "mailgo",
      "template": "mailgo-template",
      "icons": [
        {
          "src": "assets/icons/512.png",
          "sizes": "512x512",
          "type": "image/png"
        },
        {
          "src": "assets/icons/256.png",
          "sizes": "256x256",
          "type": "image/png"
        },
        {
          "src": "assets/icons/192.png",
          "sizes": "192x192",
          "type": "image/png"
        },
        {
          "src": "assets/icons/128.png",
          "sizes": "128x128",
          "type": "image/png"
        },
        {
          "src": "assets/icons/48.png",
          "sizes": "48x48",
          "type": "image/png"
        },
        {
          "src": "assets/icons/96.png",
          "sizes": "96x96",
          "type": "image/png"
        },
        {
          "src": "assets/icons/16.png",
          "sizes": "16x16",
          "type": "image/png"
        }
      ],
      "screenshots": [
        {
          "src": "assets/screenshots/screen-2.png",
          "sizes": "600x400",
          "type": "image/png"
        }
      ],
      "ms_ac_template": "widgets/mailgo-final-template.json",
      "data": "widgets/mailgo-new-data.json",
      "type": "application/json",
      "auth": false,
      "update": 86400
    }
  ]
}
